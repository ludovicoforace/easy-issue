<section>
  <div class="cool-input">
    <input type="text" placeholder="search an issue" value={{filter}} />
  </div>
  <ul>
    {{#if loading}}
      <li class="loading">loading..</li>
    {{else}}
    {{#filtered}}
      <li><a class="ellipsis" href='{{url}}' target="_blank">{{title}}</a></li>
    {{/filtered}}
    {{/if}}
  </ul>
</section>
