<div class="pend">
  <h1 class="title">Customer Support Issue Tracker</h1>
  <div id="widget">
    <header>
      <ul>
        {{#head:i}}
        <li on-click='active:{{i}}' class='{{ i === activate ? "activate" : "" }}'>{{this}}</li>
        {{/head}}
      </ul>
    </header>

    <main>
      {{#activate === 0}}
      <Issues />
      {{/if}} 
      {{#activate === 1}}
      <Issues />
      {{/if}}
      {{#activate === 2}}
      <Issues />
      {{/if}}
    </main>

    <footer>
      <p>Issue Tracker</p>
    </footer>
  </div>
</div>